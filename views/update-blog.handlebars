<div>
  <form class="form blog-form">
    <div class="form-group">
      <label for="update-title">Title:</label>
      <input
        class="form-input"
        type="text"
        id="update-title"
        value="{{blog.title}}"
      />
    </div>
    <div class="form-group">
      <label for="update-text">Text:</label>
      <input
        class="form-input"
        type="text"
        id="update-text"
        value="{{blog.text}}"
      />
    </div>
    <div class="form-group">
      <button
        class="btn btn-primary"
        type="submit"
        id="submit-blog"
      >Submit</button>
    </div>
  </form>
</div>
<div class="form-group">
  <button class="btn btn-danger" type="submit" id="delete-blog">Delete</button>
</div>

<script src="../js/update-blog.js"></script>